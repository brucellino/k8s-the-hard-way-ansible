apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority-data: {{ ca_cert_b64 }}
    server: https://{{ kube_ip }}:6443
  name: kubernetes-the-hard-way

contexts:
- context:
    cluster: kubernetes-the-hard-way
    user: system:kube-controller-manager
  name: default
current-context: ""
preferences: {}

users:
- name: system:kube-controller-manager
  user:
    client-certificate-data: {{ kube_proxy_cert_b64 }}
    client-key-data: {{ kube_proxy_key_b64 }}
