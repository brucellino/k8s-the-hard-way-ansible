apiVersion: v1
kind: Config
current-context: ""
preferences: {}
clusters:
  - cluster:
      certificate-authority-data: {{ ca_cert_b64 }}
      server: https://{{ kube_ip }}:6443
    name: kubernetes-the-hard-way
contexts:
  - context:
      cluster: kubernetes-the-hard-way
      user: system:node:{{ ansible_hostname }}
    name: default
users:
  - name: system:node:{{ ansible_hostname }}
    user:
      client-certificate-data: {{ cert_b64 }}
      client-key-data: {{ key_b64 }}
